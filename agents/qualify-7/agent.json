{
  "id": "qualify-7",
  "name": "Lead Qualifier Bot",
  "description": "Auto-qualifies inbound leads using BANT + intent scoring",
  "model": "kimi",
  "schedule": "webhook",
  "timezone": "Europe/Berlin",
  "timeout": 120,
  "enabled": false,
  "triggers": [
    "form_submission",
    "demo_request",
    "email_inquiry",
    "calendly_booking"
  ],
  "qualification_criteria": {
    "budget": { "question": "What's your monthly call volume?", "weight": 0.25 },
    "authority": { "question": "Are you the decision maker?", "weight": 0.25 },
    "need": { "question": "What's your biggest call handling pain?", "weight": 0.3 },
    "timeline": { "question": "When do you need this solved?", "weight": 0.2 }
  },
  "scoring": {
    "hot": 80,
    "warm": 60,
    "cold": 40
  },
  "routing": {
    "hot": "reach-3@priority",
    "warm": "reach-3@standard",
    "cold": "nurture_sequence"
  },
  "enrichment": {
    "clearbit": true,
    "website": true,
    "company_size": true
  },
  "outputs": {
    "qualified_leads": "memory/qualify-7/leads/",
    "scores": "memory/qualify-7/scores.json"
  }
}
