{
  "id": "qualify-7",
  "name": "Lead Qualifier Bot",
  "description": "Auto-qualifies inbound leads using BANT + intent scoring",
  "model": "kimi",
  "schedule": "webhook",
  "timezone": "Europe/Berlin",
  "timeout": 120,
  "enabled": false,
  "skills": ["email-sequence", "analytics-tracking"],
  "triggers": ["form_submission", "demo_request", "email_inquiry"],
  "qualification_criteria": {
    "budget": { "question": "Monthly call volume?", "weight": 0.25 },
    "authority": { "question": "Decision maker?", "weight": 0.25 },
    "need": { "question": "Biggest call handling pain?", "weight": 0.3 },
    "timeline": { "question": "When needed?", "weight": 0.2 }
  },
  "scoring": { "hot": 80, "warm": 60, "cold": 40 },
  "routing": { "hot": "reach-3@priority", "warm": "reach-3@standard", "cold": "nurture" },
  "outputs": { "qualified_leads": "memory/qualify-7/leads/", "scores": "memory/qualify-7/scores.json" }
}
